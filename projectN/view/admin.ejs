<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>AdminPanel</title>
        <link rel="stylesheet" href="/assets/astyle.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css " />

        <style>
            button {
                width: 100px;
                height: 5vh;
                border-radius: 20px;
                background-color: rgb(0, 255, 136);
                border: none;
            }
            .socials {
                list-style: none;
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 1rem 0 3rem 0;
            }
            .socials a i {
                font-size: 1.1rem;
                transition: 4s ease;
            }
        </style>
    </head>
    <body>
        <!--saidebar-->
        <section id="sidebar">
            <div class="sidebar-brand">
                <h3><i class="fa fa-desktop" aria-hidden="true"></i><span>Dashboard</span></h3>
            </div>
            <div class="sidebar-menu">
                <ul>
                    <!-- <li>
                        <a href="#"><i class="fa fa-suitcase" aria-hidden="true"></i><span>Tours</span></a>
                    </li>

                    <li>
                        <a href="#"><i class="fa fa-users" aria-hidden="true"></i><span>Custmer</span></a>
                    </li>-->
                    <li>
                        <a href="/"><i class="fa fa-file" aria-hidden="true"></i><span>Packages</span></a>
                    </li>
                    <li>
                        <a href="/login"><i class="fa fa-user-circle" aria-hidden="true"></i><span>Account</span></a>
                    </li>
                    <li>
                        <a href="/login"><i class="fa fa-sign-out" aria-hidden="true"></i><span>LogOut</span></a>
                    </li>
                </ul>
            </div>
        </section>
        <section id="main-Content">
            <div id="pakages_1">
                <h4>
                    <a href="/add"><button>Add</button></a>
                </h4>
                <br />
                <div class="login_btn">
                    <a href="/login"> <button>LogOut</button></a>
                </div>
            </div>
            <div class="clear"></div>

            <div class="custmer-info container">
                <div class="pro-table">
                    <table style="width: 100%">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Location</th>
                                <th>Package-Name</th>
                                <th>Type</th>
                                <th>Duration</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="pro">
                            <tr>
                                <% user.forEach(function(user){ %>
                                <td><%= user.name %></td>
                                <td><%= user.location %></td>
                                <td><%= user.package %></td>
                                <td><%= user.type %></td>
                                <td><%= user.duration %></td>
                                <td><%= user.email %></td>
                                <td><%= user.phone%></td>

                                <td>
                            <div class="socails"> 
                                    <a href="edit/<%= user.name %>"><i class="fa fa-pencil-square-o" style="color: blue;font-size: 2rem;" aria-hidden="true"></i></a>
                                    <a href="delete/<%=user.name %>"><i class="fa fa-trash-o" aria-hidden="true " style="color: crimson;font-size: 2rem;"></i></a>
                                </td>
                            </div>
                              
                            </tr>
                            <% }); %>
                        </tbody>
                        
                    </table>
                </div>
            </div>
        </section>
    </body>
</html>
