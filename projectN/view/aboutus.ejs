            }
            .content-section .title {
                text-transform: uppercase;
                font-size: 28px;
            }
            .content-section .content h3 {
                margin-top: 20px;
                color: #5d5d5d;
            }
            .content-section .content .button a {
                background-color: #3d3d3d;
                padding: 12px 40px;
                text-decoration: none;
                color: white;
                font-size: 25px;
                letter-spacing: 1.5px;
            }
            .content-section .social i {
                color: #a52a2a;
                padding: 0px 10px;
                font-size: 30px;
            }
            .content-section .social i:hover {
                color: #3d3d3d;
            }
            .clear {
                clear: both;
            }
            footer {
                background: rgb(90, 87, 87);
                color: white;
                height: 20vh;
                position: absolute;
                left: 0;
                right: 0;
                font-family: "Open Sans";
                padding-top: 40px;
                color: white;
            }
            .footer-content {
                display: flex;
                align-items: center;
                justify-content: center;
                flex-direction: column;
                text-align: center;
            }
            .socials a {
                text-decoration: none;
                color: rgb(244, 255, 242);
            }
            .socials a i {
                font-size: 1.1rem;
                transition: 4s ease;
            }
            .socials a:hover i {
                color: rgb(5, 48, 4);
            }
            .socials {
                list-style: none;
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 1rem 0 3rem 0;
            }
            .socials li {
                margin: 0 10px;
            }
            .footer-content p {
                max-width: 500px;
                margin: 10px auto;
                line-height: 28px;
                font-size: 14px;
            }
            .all {
                background-color: rgb(1, 13, 32);
                width: 100%;
                height: 10vh;
            }
            .all ul li a {
                text-decoration: none;
                color: white;
                padding: 0px 5px;
                background: transparent;
            }
            .login_btn {
                border: 2px solid #fff;
                border-radius: 50px;
                width: 100px;
                outline: none !important;
                background: transparent;
                padding: 8px 0;
                float: right;
                color: #fff;
                margin-top: 2px;
            }
            ul {
                float: left;
                list-style-type: none;
                margin-top: 25px;
            }
            ul li {
                display: inline-block;
            }
            ul li a {
                text-decoration: none;
                color: black;
                padding: 0px 5px;
                background: transparent;
            }
            .footer-bottom {
                background: rgb(90, 87, 87);
                width: 150vw;
                padding: 20px 0;
                text-align: center;
            }
            .footer-bottom p {
                font-size: 14px;
                word-spacing: 2px;
                text-transform: capitalize;
            }
            .footer-bottom span {
                text-transform: uppercase;
                opacity: 0.4;
                font-weight: 200;
            }
