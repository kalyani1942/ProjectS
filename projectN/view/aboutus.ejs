        <style>
            * {
                margin: 0px;
                padding: 0px;
                box-sizing: border-box;
            }
            .section {
                width: 100%;
                min-height: 100vh;
                background-color: #ddd;
            }
            .container {
                width: 80%;
                display: block;
                margin: auto;
                padding-top: 100px;
            }
            .content-section {
                float: left;
                width: 55%;
            }
            .img-section {
                float: right;
                width: 40%;
            }
            .img-section img {
                width: 100%;
                height: auto;
                margin-top: 100px;
            }
            .content-section .social {
